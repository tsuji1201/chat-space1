.message-list__box{data: {message: {id: '1'}}}
  .message-list__box__info
    .message-list__box__info__name
      = message.user.name
    .message-list__box__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-list__box__text
    - if message.body.present?
      = message.body
    = image_tag message.image.url, class: 'message__image' if message.image.present?